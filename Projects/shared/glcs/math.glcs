
// Pi
float	Pi (float x)		{ return 3.1415926535897932384626433832795 * x; }
double	Pi (double x)		{ return 3.1415926535897932384626433832795 * x; }


// SinCos
float2	SinCos (float x)	{ return float2( sin(x), cos(x) ); }
//double2	SinCos (double x)	{ return double2( sin(x), cos(x) ); }


// CilindricalToCartesian
float3 CilindricalToCartesian (float radius, float angle, float elevation)
{
	float2	phi = SinCos( angle );
	return float3( radius * phi.y, radius * phi.x, elevation );
}
