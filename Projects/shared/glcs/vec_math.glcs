/*
	Vector Mathematic
*/

float3 CalcNormal (in float3 a, in float3 b, in float3 c)
{
	float3 cp = cross( b - a, c - a );
	return length( cp ) > 0.0 ? normalize( cp ) : float3( 0.0 );
}

double3 CalcNormal (in double3 a, in double3 b, in double3 c)
{
	double3 cp = cross( b - a, c - a );
	return length( cp ) > 0.0 ? normalize( cp ) : double3( 0.0 );
}

